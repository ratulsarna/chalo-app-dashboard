[Unit]
Description=Chalo Dashboard - Analytics docs updater
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
User=ratul
WorkingDirectory=%h/Developer/chalo/chalo-app-dashboard
# Do not commit secrets to this repo. Put keys/paths in this env file.
EnvironmentFile=/etc/chalo-dashboard/analytics-updater.env
ExecStart=/usr/bin/env node scripts/analytics-updater/run-once.js

# Hardening (best-effort; adjust if it breaks)
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=false
ReadWritePaths=%h/Developer/chalo/chalo-app-dashboard %h/Developer/chalo/chalo-app-kmp %h/.local/state

[Install]
WantedBy=multi-user.target
